{
  "name": "snippet-safe",
  "version": "1.0.0",
  "description": "A safe place to store code snippets in the cloud",
  "scripts": {
    "start": "deno run --allow-net --allow-read --allow-env --allow-sys main.ts",
    "dev": "deno run --watch --allow-net --allow-read --allow-env --allow-sys main.ts",
    "test": "playwright test",
    "test:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1"
  }
} 